<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <?xml version="1.0" encoding="iso-8859-1"?>
    <title> 온라인 감정나눔카드 </title>
    <meta name="viewport" content="width=device-width, initial-scale=0.55">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <style> @import url('https://fonts.googleapis.com/css2?family=Gamja+Flower&display=swap');

    * {
        padding: 0;
        margin: 0;
    }

    body {
        background-color: #f6ebe1;
        padding-top: 50px;
    }

    .content {
        max-width: 1200px;
        margin: 0 auto;
        margin-top: 30px;
    }

    .flex-container {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: 0em;
        margin: 0 auto;
        justify-content: center;
    }

    .flex-item {
        width: 120px;
        height: 170px;
        flex-grow: 0;
        border-radius: 5px;
    }

    .flex-item:hover {
        background-color: #D3D3D3;
        cursor: pointer;
    }

    .card-box {
        position: relative;
        width: 100px;
        height: 150px;
        margin: 10px;
    }

    .card-box > * {
        position: absolute;
    }

    .card-name {
        width: 100%;
        top: 10%;
        font-size: 15px;
        font-family: 'Gamja Flower', cursive;
        font-weight: bold;
        text-align: center;
    }

    .card-emoticon {
        width: 80px;
        height: 80px;
        top: 55px;
        left: 10px;
    }

    .card {
        width: 85%;
        margin: 0 auto;
    }
    .card-body {
        margin: 0 auto;
    }

    .stamp {
        width: 150px;
        height: 150px;
        left: -25px;
        top: 20px;
    }

    .resetButton:hover {
        cursor:pointer;
    }

    </style>

</head>
<body>
    <div class="card">
        <div class="card-body">
            
        </div>
    </div>

    <section class="content">
        <div class="flex-container">

        <% for (var i=1; i<=55; i++) { %>
            <div class="flex-item" onclick="cardSelectAjaxEvent(<%=i%>)">
                <div class="card-box">
                    <svg viewBox="0 0 100 150" fill="<%=view.cardColor[i]%>">
                        <rect x="0" y="0" width="100%" height="100%" rx="5" ry="5"/>
                        <rect x="15" y="9" width="70%" height="20%" rx="10" ry="10" fill="white"/>
                    </svg>
                    <div class="card-name"><%= view.emotionList[i] %></div>
                    <img class="card-emoticon" src="emoticonNo<%=i%>.png">

                    <svg class="stamp" viewBox="0 0 100 100" transform="rotate(-20)">
                        <ellipse x="0" y="0" width="100%" height="100%" cx="50" cy="50" rx="40" ry="20"
                        style="stroke:none; stroke-width: 3px; fill:none"
                        />
                        <text x="25" y="55"
                        style="fill: none" font-size="20" font-family="Gamja Flower, cursive">
                        </text>
                    </svg>

                </div>
            </div>
        <% } %>

        </div>
    </section>

    <script>
    let I = "<%= JSON.stringify(I) %>";
    I = I.replaceAll('&#34;', '\"');
    I = JSON.parse(I);

    let view = "<%= JSON.stringify(view) %>";
    view = view.replaceAll('&#34;', '\"');
    view = JSON.parse(view);

    var card = "<%= JSON.stringify(card) %>";
    card = card.replaceAll('&#34;', '\"');
    card = JSON.parse(card);

    var user = "<%= JSON.stringify(user) %>";
    user = user.replaceAll('&#34;', '\"');
    user = JSON.parse(user);

    console.log(I) ;
    console.log(view);
    console.log(user);

    const roomId = String(<%= roomId %>);



    function updateCard(num, type, name, color) {
        var target = document.getElementsByClassName('stamp')[num-1];
        target.style.visibility = (type == 1) ? "visible" : "hidden";
        target.childNodes[1].style.stroke = color;
        target.childNodes[3].style.fill = color;
        target.childNodes[3].innerHTML = name;
    };

    function syncAjaxEvent(curTime) {
        var data = {
            'lastTime': curTime,
            'roomId': roomId
        };
        data = JSON.stringify(data);

        var xhr = new XMLHttpRequest();
        xhr.open('POST', 'syncRequest');
        xhr.setRequestHeader('Content-type', "application/json");
        xhr.send(data);

        xhr.addEventListener('load', function() {
            var res = JSON.parse(xhr.responseText);
            console.log(res);
            for (var item of res.updateList)
                updateCard(item.num, item.type, item.name, item.color);
            syncAjaxEvent(res.curTime);
        });
    };

    function cardSelectAjaxEvent(num) {

        var data = {
            "roomId": roomId,
            "num": num,
            "sid": I.sid
        };
        data = JSON.stringify(data);

        var xhr = new XMLHttpRequest();
        xhr.open('POST', 'selectCardRequest');
        xhr.setRequestHeader('Content-type', "application/json");
        xhr.send(data);

        xhr.addEventListener('load', function() {
            var res = JSON.parse(xhr.responseText);
            console.log(res)
            if (res.operation == true)
                updateCard(num, res.type, I.name, I.color);
            });

    };

    function cardResetEvent() {
        var data = {
            'roomId': roomId,
        };
        data = JSON.stringify(data);

        var xhr = new XMLHttpRequest();
        xhr.open('POST', 'cardResetRequest');
        xhr.setRequestHeader('Content-type', "application/json");
        xhr.send(data);
    }
    </script>



    <script>
    for (var i=1; i<=55; i++) {
        if (card.state[i].type != 0) {
            updateCard(i, card.state[i].type, card.state[i].name, card.state[i].color);
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        syncAjaxEvent(<%= card.curTime %>);
    });
    </script>

</body>
</html>
